<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.use_sql_comments">true</property>

        <mapping class="es.udc.pa.pa009.pwin.model.apuesta.Apuesta" />
        <mapping class="es.udc.pa.pa009.pwin.model.apuesta.Opcion" />
        <mapping class="es.udc.pa.pa009.pwin.model.apuesta.TipoApuesta" />
        <mapping class="es.udc.pa.pa009.pwin.model.evento.Categoria" />
        <mapping class="es.udc.pa.pa009.pwin.model.evento.Evento" />
        <mapping class="es.udc.pa.pa009.pwin.model.userprofile.UserProfile" />
        
    </session-factory>
</hibernate-configuration>